[ui]
username = Alexandre Kandalintsev <spam@messir.net>

[extensions]
hgext.extdiff =
hgext.mq =
hgext.pager =
hgext.graphlog =
color =
rebase=
purge =
largefiles =
record =

[extdiff]
cmd.ediff  = git
opts.ediff = diff --color-words
cmd.dwdiff  = dwdiff
opts.dwdiff = -c

[pager]
pager = less -F -L -M -X -R
ignore = push, pull, fpull, fpush

[ui]
merge = internal:merge

[largefiles]
patterns = *.jpg *.png *.gif *.jpg *.jpeg *.xcf *.eps *.pdf *.dvi *.zip *.svg bottle.py *.odt *.odp *.doc *.docx *.rtf *.swf *.pickle
minsize = 0.1

